<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutTitrePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beigeLight"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".Activity_Modifier">

    <!-- ______________________ TITRE MODIFIER MOTIF + CUBE ______________________-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- TITRE AJOUT-->
        <TextView
            android:id="@+id/TvTitreModifierMotif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/orangeLight"
            android:fontFamily="@font/rubik_mono_one_regular"
            android:gravity="center"
            android:text="@string/modifierMotif"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ______________________ SCROLL VIEWER ______________________-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <!-- ______________________ SECTION UNITY MOTIF ______________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutUnityMotif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- MESSAGE D'ERREUR -->
                    <View
                        android:id="@+id/view2"
                        android:layout_width="11dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/TVUnityMotifModif"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/UnityAjoutMotifTitre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVUnityMotifErreurModif"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/redLight"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayoutEt_IconUnityModifier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/VideGUnityModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- AFFICHAGE DE L'IMAGE -->
                    <ImageView
                        android:id="@+id/IVPreviewUnityModifier"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1" />

                    <!-- CHAMPS IMAGE -->
                    <EditText
                        android:id="@+id/ETUnityModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:hint="@string/champsUnity"
                        android:inputType="textUri|textPersonName" />

                    <!-- IMAGE BOUTON UNITY -->
                    <ImageButton
                        android:id="@+id/ImgBtnUnity"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg"
                        android:onClick="btnLoadUnity"
                        app:srcCompat="@drawable/ic_videogame_foreground" />

                    <View
                        android:id="@+id/videDUnityModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- ______________________ SECTION NOM MOTIF ______________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutNomMotifModifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- MESSAGE D'ERREUR -->
                    <View
                        android:id="@+id/view3"
                        android:layout_width="11dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/TvNomMotifModifier"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/nomModifierMotifTitre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVNomMotifErreurModifier"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/redLight"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutET_IconNom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/VideGNomMotif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- IMAGE VIEW LOGO NOM-->
                    <ImageView
                        android:id="@+id/ImgPattern"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_pattern_ajoutermotif_foreground" />

                    <!-- CHAMPS NOM AJOUT -->
                    <EditText
                        android:id="@+id/ETNomMotifModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:hint="@string/champsNom"
                        android:inputType="textPersonName" />

                    <View
                        android:id="@+id/VideDNomMotif1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/VideDNomMotif2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <!-- ______________________ SECTION IMAGE MOTIF ______________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutImageMotif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- MESSAGE D'ERREUR -->
                    <View
                        android:id="@+id/view4"
                        android:layout_width="11dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/TVImageMotifModifier"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/imageModifierMotifTitre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVImageMotifErreur"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/redLight"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutEt_IconImageModifier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/VideGImageModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- AFFICHAGE DE L'IMAGE -->
                    <ImageView
                        android:id="@+id/IVPreviewImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_image_ajout_noir_foreground" />

                    <!-- CHAMPS IMAGE -->
                    <EditText
                        android:id="@+id/ETImageModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:hint="@string/champsImage"
                        android:inputType="textUri|textPersonName" />

                    <!-- IMAGE BOUTON FILE CELLPHON -->
                    <ImageButton
                        android:id="@+id/imageButtonFileImg"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg"
                        app:srcCompat="@drawable/ic_file_foreground" />

                    <View
                        android:id="@+id/videDImageModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <!-- ______________________ SECTION CREATEUR MOTIF ______________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutCreateurModifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- MESSAGE D'ERREUR -->
                    <View
                        android:id="@+id/view5"
                        android:layout_width="11dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/TVCreateurMotifModifier"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/createurModifierMotifTitre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVCreateurMotifErreur"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/redLight"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutEt_IconCreateur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/VideGCreateur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- ICONE CREATEUR -->
                    <ImageView
                        android:id="@+id/ImgCreateurAjout"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_createur_ajoutermotif_foreground" />

                    <!-- CHAMPS CREATEUR -->
                    <EditText
                        android:id="@+id/ETCreateurMotifModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ems="10"
                        android:hint="@string/champsCreateur"
                        android:inputType="textPersonName" />

                    <View
                        android:id="@+id/VideDCreateur1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/videDCreateur2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <!-- ______________________ SECTION DATE MOTIF ______________________-->
            <LinearLayout
                android:id="@+id/LinearLayoutDateModifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- MESSAGE D'ERREUR -->
                    <View
                        android:id="@+id/view6"
                        android:layout_width="11dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/TVDateMotifModifier"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/dateModifierMotifTitre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVDateMotifErreurModifier"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/redLight"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinearLayoutEt_IconDateModifier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/VideGDateModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- ICONE DATE -->
                    <ImageView
                        android:id="@+id/ImgDateModifier"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_date_ajoutermotif_foreground" />

                    <!-- CHAMPS DATE -->
                    <EditText
                        android:id="@+id/ETDateMotifModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:inputType="date" />

                    <!-- BOUTON DATE PICKER -->
                    <ImageButton
                        android:id="@+id/imgButtonDatePicker"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_custom"
                        app:srcCompat="@drawable/ic_calendar_picker_foreground" />

                    <View
                        android:id="@+id/videDDate2Modifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <!-- ______________________ SECTION TYPE MOTIF ______________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutTypeMotifModifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- MESSAGE D'ERREUR -->
                    <View
                        android:id="@+id/view7"
                        android:layout_width="11dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/TVTypeMotifModifier"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/typeModifierMotifTitre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TVTypeMotifErreur"
                        android:layout_width="232dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="@color/redLight"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayoutET_IconDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/VideGType"
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- ICONE TYPE -->
                    <ImageView
                        android:id="@+id/ImgTypeModifier"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_catalogue_nom_foreground" />

                    <!-- RADIOGROUP -->
                    <RadioGroup
                        android:id="@+id/radioGroupeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <!-- RADIO BOUTON PERSONNALISÃ‰ -->
                        <RadioButton
                            android:id="@+id/BtnRadioPersonnel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="onRadioButtonClicked"
                            android:text="@string/champsMotifPersonnalise"
                            android:textSize="20sp" />

                        <!-- RADIO BOUTON BASE -->
                        <RadioButton
                            android:id="@+id/btnRadioBase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="onRadioButtonClicked"
                            android:text="@string/champsMotifBase"
                            android:textSize="20sp" />

                    </RadioGroup>

                    <View
                        android:id="@+id/VideDType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/VideDType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>


            <!-- ______________________ SECTION BOUTON (MODIFIER) ______________________-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutBoutonModifier"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!-- BOUTON AJOUTER -->
                <Button
                    android:id="@+id/btnModifierMotif"
                    android:layout_width="127dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_custom"
                    android:onClick="gestionClickMotif"
                    android:text="@string/modifierBouton"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>



